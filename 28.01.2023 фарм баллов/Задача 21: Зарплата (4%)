import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int min = 100001;
        int max = -1;
        for(int i = 0;i<3;i++){
            int n = scanner.nextInt();
            max = Math.max(max,n);
            min = Math.min(min,n);
        }
        System.out.println(max-min);
    }
}
